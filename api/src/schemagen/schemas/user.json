{
  "allOf": [
    {
      "required": [
        "email",
        "password"
      ],
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "example": "user@email.com"
        },
        "password": {
          "type": "string",
          "description": "password hashed in db",
          "format": "password",
          "example": "password"
        }
      },
      "$schema": "http://json-schema.org/schema#"
    },
    {
      "required": [
        "name",
        "role"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "User name"
        },
        "role": {
          "type": "string",
          "description": "User roles",
          "enum": [
            "ADMIN",
            "TEACHER"
          ],
          "$schema": "http://json-schema.org/schema#"
        }
      }
    }
  ],
  "$schema": "http://json-schema.org/schema#",
  "type": "object"
}